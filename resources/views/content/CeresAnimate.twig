{% set HeaderAnimate = config("CeresAnimate.header.animate") %}
{% set PageBodyAnimate = config("CeresAnimate.pagebody.animate") %}
{% set FooterAnimate = config("CeresAnimate.footer.animate") %}
{% set BreadcrumbsAnimate = config("CeresAnimate.breadcrumbs.animate") %}

{% set HeaderSelector = config("CeresAnimate.header.selector") %}
{% set PageBodySelector = config("CeresAnimate.pagebody.selector") %}
{% set FooterSelector = config("CeresAnimate.footer.selector") %}
{% set BreadcrumbsSelector = config("CeresAnimate.breadcrumbs.selector") %}

{% set AnimateDuration = config("CeresAnimate.animateduration") %}

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<link rel="stylesheet" href="{{ plugin_path("CeresAnimate") }}/css/main.css">
<style>

    {% if HeaderAnimate != "none" %}
        {{ HeaderSelector }}{
            display: none;
        }
    {% endif %}

    {% if PageBodyAnimate != "none" %}
        {{ PageBodySelector }}{
            dislay: none;
        }
    {% endif %}

    {% if FooterAnimate != "none" %}
        {{ FooterSelector }}{
            display: none;
        }
    {% endif %}

    {% if BreadcrumbsAnimate != "none" %}
        {{ BreadcrumbsSelector }}{
            display: none;
        }
    {% endif %}

    .CeresAnimate{
        animation-duration: {{ AnimateDuration }}s;
        animation-fill-mode: both;
    }
</style>
<script>

var header_selector = "{{ HeaderSelector }}";
var pagebody_selector = "{{ PageBodySelector }}";
var footer_selector = "{{ FooterSelector }}";
var breadcrumbs_selector = "{{ BreadcrumbsSelector }}";

var p_animate = "{{ PageBodyAnimate }}"+" CeresAnimate";
var h_animate = "{{ HeaderAnimate }}"+" CeresAnimate";
var f_animate = "{{ FooterAnimate }}"+" CeresAnimate";
var b_animate = "{{ BreadcrumbsAnimate }}"+" CeresAnimate";

$(document).ready( function(){
    $("body").css("display", "block");
    if(h_animate != "none" && h_animate != "")
    {
        $(header_selector).addClass(h_animate+" non-hidden").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
                    $(this).removeClass(h_animate);  
        });    
    }
    else
    {
        $(header_selector).addClass("non-hidden");
    }

    if(p_animate != "none" && p_animate != "")
    {
        $(pagebody_selector).addClass(p_animate+" non-hidden").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
                    $(this).removeClass(p_animate);
        });
    }
    else
    {
        $(pagebody_selector).addClass("non-hidden");
    }


    if(f_animate != "none" && f_animate != "")
    {
        $(footer_selector).addClass(f_animate+" non-hidden").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
                $(this).removeClass(f_animate); 
        });    
    }
    else
    {
        $(footer_selector).addClass("non-hidden");
    }


    if(b_animate != "none" && b_animate != "")
    {
        $(breadcrumbs_selector).addClass(b_animate+" non-hidden").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
                $(this).removeClass(b_animate); 
        });
    }
    else
    {
        $(breadcrumbs_selector).addClass("non-hidden");
    }

});
</script>